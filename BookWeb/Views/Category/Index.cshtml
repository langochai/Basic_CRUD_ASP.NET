@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-bookmark-plus"></i> &nbsp; Create new category</a>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Category name
                </th>
                <th>
                    Display name
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary">Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

